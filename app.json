{
  "expo": {
    "name": "Todo App",
    "slug": "todo-app",
    "version": "1.0.0",

    "icon": "./assets/images/todoicon.png",

    "orientation": "portrait",
    "userInterfaceStyle": "automatic",

    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/todoicon.png",
        "backgroundColor": "#ffffff"
      }
    },

    "web": {
      "favicon": "./assets/images/todoicon.png"
    }
  }
}